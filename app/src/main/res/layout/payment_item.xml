<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image_style"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- Background's ImageView -->
            <ImageView
                android:id="@+id/icon_bg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/budget_menu_membership_background" />

            <!-- Icon's ImageView -->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/budget_menu_membership" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abel"
            android:textColor="@color/body_text"
            android:text="MembresÃ­a Netflix"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abel"
            android:textColor="@color/body_text"
            android:text="15.02.2023"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="- $ 29.90"
        android:fontFamily="@font/abel"
        android:textColor="@color/body_text"
        android:textAlignment="textEnd"
        android:textSize="20sp" />
</LinearLayout>