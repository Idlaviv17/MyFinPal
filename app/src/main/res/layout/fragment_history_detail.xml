<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.HistoryDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/payment_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/example_icon_netflix"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp" />

        <TextView
            android:id="@+id/payment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="Payment title Example"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:text="Establishment"
                android:gravity="center_vertical"
                android:textColor="@color/body_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/establishment_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Establishment Example"
                android:fontFamily="@font/abel"
                android:textAlignment="textEnd"
                android:textColor="@color/body_text"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:text="Payment Method"
                android:textColor="@color/body_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/payment_method_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Payment Method"
                android:fontFamily="@font/abel"
                android:textAlignment="textEnd"
                android:textColor="@color/body_text"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:text="Category"
                android:textColor="@color/body_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Category"
                android:fontFamily="@font/abel"
                android:textAlignment="textEnd"
                android:textColor="@color/body_text"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:text="Cost"
                android:textColor="@color/body_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cost_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="$199"
                android:fontFamily="@font/abel"
                android:textAlignment="textEnd"
                android:textColor="@color/body_text"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus_button"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="Cancel\nMembership"
                android:textAlignment="center"
                android:textColor="@color/body_text"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>